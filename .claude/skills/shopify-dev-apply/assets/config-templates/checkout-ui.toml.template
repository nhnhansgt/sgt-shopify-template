# Checkout UI Extension Configuration
# Place this file as: extensions/your-extension/shopify.extension.toml

api_version = "2025-10"

[[extensions]]
name = "My Checkout Extension"
description = "Extension description"
handle = "my-checkout-extension"
type = "ui_extension"
uid = "auto-generated-by-cli"

# ============================================
# CAPABILITIES
# ============================================
[extensions.capabilities]
api_access = true       # Query Storefront API
network_access = true     # Make external network calls
block_progress = true     # Extension can block checkout progress

# ============================================
# TARGETING - Where extension renders
# ============================================
[[extensions.targeting]]
module = "./src/Extension.jsx"

# Common checkout targets:
# - purchase.checkout.block.render
# - purchase.checkout.delivery-address.render-before
# - purchase.checkout.shipping-option.render-after
# - purchase.checkout.payment-method.render-before
# - purchase.checkout.reduce.render-after
# - purchase.checkout.contact-information.render-before
# - purchase.checkout.header.render-before
target = "purchase.checkout.block.render"

# ============================================
# METAFIELDS (optional)
# ============================================
[[extensions.targeting.metafields]]
namespace = "my-namespace"
key = "my-key"

# ============================================
# SETTINGS (merchant-configurable)
# ============================================
[extensions.settings]
[[extensions.settings.fields]]
key = "banner_title"
type = "single_line_text_field"
name = "Banner title"
description = "Enter a title for the banner"

[[extensions.settings.fields]]
key = "show_banner"
type = "boolean"
name = "Show banner"
default = true

[[extensions.settings.fields]]
key = "banner_color"
type = "single_line_text_field"
name = "Banner color"
description = "Hex color code"
default = "#000000"
