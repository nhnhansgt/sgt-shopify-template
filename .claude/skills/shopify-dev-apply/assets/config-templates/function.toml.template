# Function Extension Configuration
# Place this file as: extensions/your-function/shopify.extension.toml
#
# Note: Function configuration varies by function type
# Query MCP docs for exact syntax: learn_shopify_api(api: "functions")

api_version = "2025-10"

[[extensions]]
type = "function"
name = "My Function"
handle = "my-function"
uid = "auto-generated-by-cli"

