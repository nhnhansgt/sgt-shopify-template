# Admin Block Extension Configuration
# Place this file as: extensions/your-extension/shopify.extension.toml

api_version = "2025-10"

[[extensions]]
name = "My Admin Block"
description = "Block extension for Shopify Admin"
handle = "my-admin-block"
type = "ui_extension"
uid = "auto-generated-by-cli"

# ============================================
# CAPABILITIES
# ============================================
[extensions.capabilities]
api_access = true       # Query Admin API
network_access = true     # Make external network calls
block_progress = false    # Blocks not in admin

# ============================================
# TARGETING - Where extension renders
# ============================================
[[extensions.targeting]]
module = "./src/BlockExtension.jsx"

# Common admin targets:
# Product pages:
# - admin.product-details.block.render
# - admin.product-details.action.render
# Order pages:
# - admin.order-details.block.render
# - admin.order-details.action.render
# Customer pages:
# - admin.customer-details.block.render
target = "admin.product-details.block.render"

# ============================================
# METAFIELDS (optional)
# ============================================
[[extensions.targeting.metafields]]
namespace = "my-namespace"
key = "my-key"

# ============================================
# SETTINGS (merchant-configurable)
# ============================================
[extensions.settings]
[[extensions.settings.fields]]
key = "setting_key"
type = "single_line_text_field"
name = "Setting Name"
description = "Description"
